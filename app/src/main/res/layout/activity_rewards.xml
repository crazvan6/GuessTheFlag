<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <ImageView
            android:id="@+id/imgCandy"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_candy"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imgBronzeMedal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imgCandy"
            android:src="@drawable/ic_bronze_medal"/>
        <ImageView
            android:id="@+id/imgSilverMedal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_silver_medal"
            android:layout_below="@+id/imgCandy"/>
        <ImageView
            android:id="@+id/imgGoldMedal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_gold_medal"
            android:layout_toRightOf="@+id/imgSilverMedal"
            android:layout_below="@+id/imgBronzeMedal"/>

        <ImageView
            android:id="@+id/imgTrophy"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_trophy"
            android:layout_below="@+id/imgGoldMedal"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>